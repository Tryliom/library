				"nickname": "deleteLibrary",
				"parameters": [
		            {
		              "name": "library_id",
		              "description": "ID of library",
		              "required": true,
		              "type": "integer",
		              "format": "int32",
		              "paramType": "form",
		              "minimum": "1.0",
              		  "maximum": "100000.0"
		            }
	          	],
				"responseMessages": [
		            {
		              "code": 200,
		              "message": "true"
		            },
